<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KursController">
   <center>
      <GridPane alignment="CENTER" maxHeight="210.0" maxWidth="300.0" minHeight="210.0" minWidth="300.0" prefHeight="210.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label fx:id="firstNameLabel" text="Имя" GridPane.rowIndex="1" />
            <TextField fx:id="firstNameField" prefWidth="200.0" promptText="Имя" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="firstNameIncorrectLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="lastNameLabel" text="Фамилия" GridPane.rowIndex="3" />
            <TextField fx:id="lastNameField" prefWidth="200.0" promptText="Фамилия" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="lastNameIncorrectLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="passwordLabel" text="Пароль" GridPane.rowIndex="5" />
            <PasswordField fx:id="passwordField" prefWidth="200.0" promptText="Пароль" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label fx:id="passwordIncorrectLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label fx:id="groupLabel" text="Группа" visible="false" GridPane.rowIndex="7" />
            <TextField fx:id="groupField" visible ="false" prefWidth="200.0" promptText="Группа" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <Label fx:id="groupIncorrectLabel" text="" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
               <left>
                  <Button fx:id="signInButton" alignment="CENTER" contentDisplay="CENTER" text="Sign in" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Button fx:id="signUpButton" alignment="CENTER" contentDisplay="CENTER" text="Sign up" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
